<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Body</th>
    <th>Published</th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.user %></td>
    <td><%= post.body %></td>
    <td><%= post.published %></td>
    <td><%= link_to 'Show', post %></td>
  </tr>
<% end %>
</table>
