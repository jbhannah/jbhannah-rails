<% content_for :title do %>
  <%= @post.title + " –" if @post %>
  Blog
  <% if @date %>
    –
    <%= @date.strftime('%e') if params[:day] %>
    <%= @date.strftime('%B') if params[:month] %>
    <%= @date.strftime('%Y') %>
  <% elsif @tag %>
    – <%= @tag %>
  <% end %>
  <%= "– Page " + params[:page] if params[:page] %>
<% end %>

<% content_for :sidebar do %>
  <%= render partial: 'posts/months' %>

  <%= render partial: 'posts/latest' %>

  <%= render partial: 'layouts/tweets' %>
<% end %>

<%= render template: 'layouts/application' %>
